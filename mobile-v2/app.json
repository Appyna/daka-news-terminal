{
  "expo": {
    "name": "DAKA News",
    "slug": "daka-news",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0918"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dakanews.app",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "Cette app utilise des données pour personnaliser votre expérience et améliorer nos services.",
        "NSLocationWhenInUseUsageDescription": "Nous utilisons votre localisation pour vous proposer des actualités pertinentes.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0918"
      },
      "package": "com.dakanews.app",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "com.google.android.c2dm.permission.RECEIVE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#F5C518",
          "sounds": []
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "72f67e44-ecbe-4df7-95c9-f00dd7204d90"
      }
    },
    "owner": "gabriel26-91"
  }
}
